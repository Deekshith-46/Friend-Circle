		},
		{
			"name": "Operate Balance - Coin Credit (Female)",
			"request": {
				"method": "POST",
				"header": [
					{ "key": "Authorization", "value": "Bearer {{adminToken}}" },
					{ "key": "Content-Type", "value": "application/json" }
				],
				"url": {
					"raw": "{{baseUrl}}/admin/users/operate-balance",
					"host": ["{{baseUrl}}"],
					"path": ["admin", "users", "operate-balance"]
				},
				"body": {
					"mode": "raw",
					"raw": "{\n  \"userType\": \"female\",\n  \"userId\": \"{{femaleUserId}}\",\n  \"operationType\": \"coin\",\n  \"action\": \"credit\",\n  \"amount\": 50,\n  \"message\": \"Coins Added!!\"\n}"
				}
			}
		},
		{
			"name": "List Transactions (Male Wallet)",
			"request": {
				"method": "GET",
				"header": [
					{ "key": "Authorization", "value": "Bearer {{adminToken}}" }
				],
				"url": {
					"raw": "{{baseUrl}}/admin/users/male/{{maleUserId}}/transactions?operationType=wallet",
					"host": ["{{baseUrl}}"],
					"path": ["admin", "users", "male", "{{maleUserId}}", "transactions"],
					"query": [
						{ "key": "operationType", "value": "wallet" }
					]
				}
			}
		},
		{
			"name": "List Transactions (Female Coin with date range)",
			"request": {
				"method": "GET",
				"header": [
					{ "key": "Authorization", "value": "Bearer {{adminToken}}" }
				],
				"url": {
					"raw": "{{baseUrl}}/admin/users/female/{{femaleUserId}}/transactions?operationType=coin&startDate={{startDate}}&endDate={{endDate}}",
					"host": ["{{baseUrl}}"],
					"path": ["admin", "users", "female", "{{femaleUserId}}", "transactions"],
					"query": [
						{ "key": "operationType", "value": "coin" },
						{ "key": "startDate", "value": "{{startDate}}" },
						{ "key": "endDate", "value": "{{endDate}}" }
					]
				}
			}
		},
