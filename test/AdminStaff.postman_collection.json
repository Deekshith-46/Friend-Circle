					"mode": "raw",
					"raw": "{\n  \"email\": \"staff1-updated@example.com\",\n  \"status\": \"unpublish\",\n  \"permissions\": {\n    \"interest\": { \"read\": true, \"write\": true, \"update\": true }\n  }\n}"
				}
