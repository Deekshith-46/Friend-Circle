	},
	"item": [
		{
			"name": "Create Staff",
			"request": {
				"method": "POST",
				"header": [
					{ "key": "Authorization", "value": "Bearer {{adminToken}}" },
					{ "key": "Content-Type", "value": "application/json" }
				],
				"url": {
					"raw": "{{baseUrl}}/admin/staff",
					"host": ["{{baseUrl}}"],
					"path": ["admin", "staff"]
				},
				"body": {
					"mode": "raw",
					"raw": "{\n  \"email\": \"staff1@example.com\",\n  \"password\": \"StaffPass123!\",\n  \"status\": \"publish\",\n  \"permissions\": {\n    \"interest\": { \"read\": true, \"write\": false, \"update\": false },\n    \"language\": { \"read\": true, \"write\": false, \"update\": false },\n    \"religion\": { \"read\": true, \"write\": true, \"update\": false },\n    \"page\": { \"read\": true, \"write\": true, \"update\": false }\n  }\n}"
				}
			}
		},
		{
