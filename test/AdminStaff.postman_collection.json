					{ "key": "Content-Type", "value": "application/json" }
				],
				"url": {
					"raw": "{{baseUrl}}/admin/users/operate-balance",
					"host": ["{{baseUrl}}"],
					"path": ["admin", "users", "operate-balance"]
				},
				"body": {
					"mode": "raw",
					"raw": "{\n  \"userType\": \"male\",\n  \"userId\": \"{{maleUserId}}\",\n  \"operationType\": \"wallet\",\n  \"action\": \"credit\",\n  \"amount\": 100,\n  \"message\": \"Wallet Balance Added!!\"\n}"
				}
			}
		},
		{
